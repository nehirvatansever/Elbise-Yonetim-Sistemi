@model Elbise
@{
 Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yeni Elbise Ekle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&family=Rajdhani:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Rajdhani', sans-serif;
            background: linear-gradient(135deg, #2d1b3d 0%, #4a2456 50%, #1f1228 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            color: #fff;
        }

        .form-container {
            background: rgba(45, 27, 61, 0.9);
            border: 3px solid;
            border-image: linear-gradient(135deg, #ff69b4, #da70d6) 1;
            border-radius: 20px;
            width: 100%;
            max-width: 600px;
            overflow: hidden;
            box-shadow: 0 0 40px rgba(255, 105, 180, 0.3);
        }

        .form-header {
            text-align: center;
            padding: 30px;
            background: linear-gradient(135deg, rgba(255, 105, 180, 0.1), rgba(218, 112, 214, 0.1));
            border-bottom: 2px solid rgba(255, 105, 180, 0.3);
        }

        .form-header h1 {
            font-family: 'Orbitron', sans-serif;
            font-size: 2rem;
            font-weight: 700;
            color: #ff69b4;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-shadow: 0 0 20px rgba(255, 105, 180, 0.5);
        }

        .form-body {
            padding: 40px 35px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 600;
            color: #fff;
            margin-bottom: 12px;
            font-size: 1.05rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-label i {
            color: #ff69b4;
            font-size: 1.2rem;
        }

        .form-control, .form-select {
            background: rgba(45, 27, 61, 0.8);
            border: 2px solid rgba(255, 105, 180, 0.3);
            border-radius: 10px;
            padding: 14px 18px;
            font-size: 1.05rem;
            transition: all 0.3s ease;
            font-family: 'Rajdhani', sans-serif;
            color: #fff;
            font-weight: 500;
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }

        .form-control:focus, .form-select:focus {
            background: rgba(45, 27, 61, 0.9);
            border-color: #ff69b4;
            box-shadow: 0 0 15px rgba(255, 105, 180, 0.3);
            outline: none;
            color: #fff;
        }

        .form-select {
            cursor: pointer;
        }

        .form-select option {
            background: #2d1b3d;
            color: #fff;
        }

        .btn-submit {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #ff69b4 0%, #da70d6 100%);
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 1.2rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-top: 30px;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-family: 'Orbitron', sans-serif;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 30px rgba(255, 105, 180, 0.6);
        }

        .btn-submit:active {
            transform: translateY(0);
        }

        .btn-back {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
            color: rgba(255, 255, 255, 0.6);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            padding: 12px;
            border-radius: 8px;
            border: 2px solid transparent;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-back:hover {
            color: #ff69b4;
            border-color: rgba(255, 105, 180, 0.3);
            background: rgba(255, 105, 180, 0.05);
        }


        @@media (max-width: 576px) {
            .form-container {
                border-radius: 15px;
            }

            .form-header h1 {
                font-size: 1.5rem;
            }

            .form-body {
                padding: 30px 25px;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="form-header">
            <h1>
                <i class="bi bi-plus-circle-fill"></i>
                Yeni Elbise
            </h1>
        </div>

        <div class="form-body">
            <form method="post" asp-action="Create" asp-controller="Elbise">
                <div class="form-group">
                    <label class="form-label">
                        <i class="bi bi-hash"></i>
                        üî¢ ID
                    </label>
                    <input type="number" class="form-control" name="Id" placeholder="Elbise ID giriniz" required>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="bi bi-palette-fill"></i>
                        üé® Renk
                    </label>
                    <input type="text" class="form-control" name="Renk" placeholder="√ñrn: Kƒ±rmƒ±zƒ±" required>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="bi bi-rulers"></i>
                        üìè Beden
                    </label>
                    <select class="form-select" name="Beden" required>
                        <option value="">Beden Se√ßin</option>
                        <option value="XS">XS</option>
                        <option value="S">S</option>
                        <option value="M">M</option>
                        <option value="L">L</option>
                        <option value="XL">XL</option>
                        <option value="XXL">XXL</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="bi bi-tag-fill"></i>
                        üí∞ Fiyat (‚Ç∫)
                    </label>
                    <input type="number" class="form-control" name="Fiyat" placeholder="150" min="0" required>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="bi bi-stars"></i>
                        üëî Model
                    </label>
                    <input type="text" class="form-control" name="Model" placeholder="√ñrn: Slim Fit" required>
                </div>

                <button type="submit" class="btn-submit">
                    <i class="bi bi-check-circle-fill"></i>
                    Kaydet
                </button>
            </form>

            <a href="/Elbise/List" class="btn-back">
                <i class="bi bi-arrow-left-circle">  Listeye D√∂n      </i>
             </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>